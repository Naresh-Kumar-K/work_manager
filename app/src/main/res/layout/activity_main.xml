<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b_oneTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One Time "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29000002" />

    <Button
        android:id="@+id/b_periodic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Periodic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/b_oneTime"
        app:layout_constraintStart_toStartOf="@+id/b_oneTime"
        app:layout_constraintTop_toBottomOf="@+id/b_oneTime" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>